# Django Secret Key - Generate a new one for production
SECRET_KEY=your-super-secret-django-key-change-in-production

# Debug Mode - Set to False in production
DEBUG=True

# Allowed Hosts - Add your domain in production
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Supabase PostgreSQL Database Configuration
# ============================================
# Get these from: Supabase Dashboard > Settings > Database
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-supabase-password
SUPABASE_DB_HOST=db.xxxxxxxxxxxx.supabase.co
SUPABASE_DB_PORT=5432

# ============================================
# SMTP Email Configuration (Gmail Example)
# ============================================
# For Gmail:
# 1. Enable 2-Factor Authentication
# 2. Generate App Password: Google Account > Security > App Passwords
# 3. Use the App Password below (NOT your regular password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Admin email to receive reminders (defaults to EMAIL_HOST_USER if not set)
ADMIN_EMAIL=your-email@gmail.com

# ============================================
# JWT Configuration
# ============================================
JWT_SIGNING_KEY=your-jwt-signing-key-change-in-production

# ============================================
# CORS Configuration
# ============================================
# Frontend URL (comma-separated for multiple)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
